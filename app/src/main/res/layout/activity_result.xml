<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResultActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Seu IMC é:"
        android:textAlignment="center"
        android:textColor="@color/purple_500"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textview_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="5"
        android:padding="10dp"
        android:textAlignment="center"
        android:textSize="70sp"
        tools:text="27.104" />

    <TextView
        android:id="@+id/textview_classificacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textAlignment="center"
        android:textColor="@color/green"
        android:textSize="40sp"
        tools:text="Classificação: Normal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:text="VEJA NA TABELA ABAIXO AS CLASSIFICAÇÕES:" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:text="VALOR MENOR QUE 18,5 : ABAIXO DO PESO" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:text="VALOR ENTRE 18,5 E 24,9 : NORMAL" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:text="VALOR ENTRE 25,0 E 29,9 : SOBREPESO" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:text="VALOR ENTRE 30,0 E 39,9 : OBESIDADE" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:text="VALOR MAIOR QUE 40,0 : OBESIDADE GRAVE" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnCalcular"
        android:layout_below="@+id/edittext_altura"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/logo_foto___sem_fundo_removebg_preview___c_pia" />


</LinearLayout>